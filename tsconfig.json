{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "strictNullChecks": false,
        "moduleResolution": "node",
        "removeComments": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "lib": [
            "es5",
            "dom",
            "es2015.promise"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}